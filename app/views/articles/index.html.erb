<h1 align="center">List All Articles</h1>
<% if @articles.empty? %>
  <div class="alert alert-info">
    <h3>No Articles to view</h3>
  </div>
<% end %>

<% @articles.each do |article| %>
  <div class="row">
    <div class="col-md-8 col-md-offset-2">
      <div class="well well-default">
        <div>
          <%= link_to article.title, article_path(article) %>
        </div>
        <div>
          <%= article.description %>
        </div>
        <div>
          Created by: <%= article.user.username %>,
          <%= time_ago_in_words(article.created_at) %>
        </div>
        <div>
          last updated: <%= time_ago_in_words(article.updated_at) %>
        </div>
        <div>
          <%= link_to 'Edit', edit_article_path(article), class: 'btn btn-primary btn-xs' %>
          <%= link_to 'Delete', article_path(article), method: :delete , data: {confirm: "Are you sure?"}, class: 'btn btn-danger btn-xs'%>
        </div>
      </div>
    </div>
  </div>
<% end %>

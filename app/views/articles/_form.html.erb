<div>
    <%= link_to 'Show All Articles', articles_path %>
</div>

<div>
  <% if @article.errors.any? %>
    <ul>
      <% @article.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
      <% end %>
    </ul>
  <% end %>
</div>

<div>
  <%= form_for @article do |f| %>

  <div>
    <%= f.label :title %>
  </div>
  <div>
    <%= f.text_field :title %>
  </div>
  <div>
    <%= f.label :description %>
  </div>
  <div>
    <%= f.text_area :description %>
  </div>

  <div>
    <%= f.submit %>
  </div>
 <% end %>

</div>
